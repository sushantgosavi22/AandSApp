<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="4dp">

  <androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="@dimen/size_5"
    android:layout_gravity="center"
    android:clickable="true"
    android:elevation="@dimen/size_5"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
      android:id="@+id/mainRL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgDelete"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_margin="2dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:padding="2dp"
          android:elevation="5dp"
          android:src="@android:drawable/ic_menu_delete" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="@dimen/size_10"
          android:layout_marginBottom="@dimen/size_5"
          android:layout_marginTop="@dimen/size_5"
          android:layout_marginRight="@dimen/size_10"
          android:orientation="horizontal">


          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.aandssoftware.aandsinventory.ui.adapters.CustomFontTextView
              android:id="@+id/tvCustomerName"
              android:layout_width="wrap_content"
              android:typeface="normal"
              app:font_name="bold"
              android:textSize="@dimen/size_20_sp"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black" />

            <com.aandssoftware.aandsinventory.ui.adapters.CustomFontTextView
              android:id="@+id/tvContactNameAndNumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:font_name="bold" />


            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="@integer/int_3"
              android:orientation="horizontal">

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_2"
                android:layout_weight="@integer/int_1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:typeface="serif"
                  android:text="@string/invoice_number"
                  android:textColor="@android:color/black" />
                <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/tvInvoiceNumber"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:textColor="@android:color/darker_gray" />

              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_2"
                android:layout_weight="@integer/int_1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                  android:typeface="serif"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:text="@string/number_of_item"
                  android:textColor="@android:color/black" />
                <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/tvItemCount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textColor="@android:color/darker_gray" />

              </androidx.appcompat.widget.LinearLayoutCompat>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_2"
                android:layout_weight="@integer/int_1"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                  android:typeface="serif"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:text="@string/final_bill_amount"
                  android:textColor="@android:color/black" />
                <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/tvFinalAmount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textColor="@android:color/darker_gray" />

              </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@+id/tvOrderStatus"
                android:textColor="@color/sampleLighter"
                android:textSize="@dimen/size_10_sp" />

              <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/chip_background_blue" />


            </RelativeLayout>

          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>


  </androidx.cardview.widget.CardView>
</RelativeLayout>