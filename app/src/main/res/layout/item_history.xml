<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="4dp">

  <androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:padding="5dp"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

        <LinearLayout
          android:id="@+id/llData"
          android:layout_toLeftOf="@+id/llDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:orientation="horizontal">
          <ImageView
            android:id="@+id/imgDeleteTask"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@android:drawable/ic_menu_recent_history"/>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.aandssoftware.aandsinventory.ui.adapters.CustomFontTextView
              android:id="@+id/tvModifiedParameterName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:textColor="@android:color/black"
              app:font_name="bold"
              tools:text=""/>

            <com.aandssoftware.aandsinventory.ui.adapters.CustomFontTextView
              android:id="@+id/tvActinonMessage"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:autoLink="phone"
              android:textColor="@android:color/holo_blue_dark"
              app:font_name="bold"
              tools:text=""/>

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
          android:id="@+id/llDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:layout_alignParentRight="true"
          android:orientation="horizontal">
          <com.aandssoftware.aandsinventory.ui.adapters.CustomFontTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp"
            android:textColor="@color/list_item_count"
            app:font_name="bold"
            tools:text="" />

        </LinearLayout>
    </LinearLayout>


  </androidx.cardview.widget.CardView>
</RelativeLayout>