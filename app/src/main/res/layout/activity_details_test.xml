<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#EEE"
  android:orientation="vertical"
  tools:context="veeresh.a3c.realm.ui.VehicalDetailsActivity">


  <android.support.v7.widget.CardView
    android:id="@+id/cardProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
      android:id="@+id/mainRL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:padding="5dp"
      android:background="@color/colorPrimary"
      android:orientation="vertical">
      <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/imgVehicalPhoto"
          android:layout_width="150dp"
          android:layout_height="200dp"
          android:layout_margin="15dp"
          android:layout_alignBottom="@+id/card_view"
          android:src="@android:drawable/ic_menu_gallery"
          android:transitionName="source"/>

        <android.support.v7.widget.CardView
          android:id="@+id/card_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:layout_gravity="center"
          android:layout_toEndOf="@+id/imgVehicalPhoto"
          android:layout_toRightOf="@+id/imgVehicalPhoto"
          android:clickable="true"
          android:elevation="4dp"
          android:foreground="?android:attr/selectableItemBackground">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <veeresh.a3c.realm.utilities.MyCustomTextView
              android:id="@+id/name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:drawableLeft="@drawable/ic_account_circle_blue_grey_800_24dp"
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/ic_account_circle_blue_grey_800_24dp"
              android:gravity="left"
              android:textColor="@android:color/black"
              app:font_name="bold"
              tools:text="Veeresh Charantimath"/>

            <veeresh.a3c.realm.utilities.MyCustomTextView
              android:id="@+id/vehicalNumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:drawableLeft="@drawable/ic_whatshot_blue_grey_800_24dp"
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/ic_whatshot_blue_grey_800_24dp"
              android:gravity="center"
              android:textColor="@android:color/black"
              app:font_name="semibold"
              tools:text="India"/>


            <veeresh.a3c.realm.utilities.MyCustomTextView
              android:id="@+id/currentPlace"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:drawableLeft="@drawable/ic_account_balance_blue_grey_800_24dp"
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/ic_account_balance_blue_grey_800_24dp"
              android:gravity="left"
              android:textColor="@android:color/black"
              app:font_name="semibold"
              tools:text="Runs"/>


            <veeresh.a3c.realm.utilities.MyCustomTextView
              android:id="@+id/dieselRemain"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:drawableLeft="@drawable/ic_poll_blue_grey_800_24dp"
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/ic_poll_blue_grey_800_24dp"
              android:gravity="center"
              android:textColor="@android:color/black"
              app:font_name="semibold"
              tools:text="Matches"/>


            <veeresh.a3c.realm.utilities.MyCustomTextView
              android:id="@+id/fav_player"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:drawableLeft="@drawable/ic_favorite_blue_grey_800_24dp"
              android:drawablePadding="10dp"
              android:drawableStart="@drawable/ic_favorite_blue_grey_800_24dp"
              android:gravity="center"
              android:text="My Favorite"
              android:textColor="@android:color/black"
              android:visibility="gone"
              app:font_name="semibold"/>


          </LinearLayout>


        </android.support.v7.widget.CardView>

      </RelativeLayout>


      <RelativeLayout
        android:id="@+id/desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_layout">

        <android.support.v7.widget.CardView
          android:id="@+id/card_view_desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:layout_gravity="center"
          android:clickable="true"
          android:elevation="4dp"
          android:foreground="?android:attr/selectableItemBackground">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <veeresh.a3c.realm.utilities.MyCustomTextView
              android:id="@+id/desc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:gravity="left"
              android:textColor="@android:color/black"
              app:font_name="semibold"
              tools:text="Abraham Benjamin de Villiers (born 17 February 1984) is a South African cricketer who currently captains the South African One Day International (ODI) team. He is also a former captain in T20I and Test cricket for South Africa. De Villiers is regarded as one of the greatest cricketers of all time and a legend in the modern cricket world.De Villiers holds many batting records, including world's fastest 50, 100 and 150 in ODI cricket, the fastest Test century by a South African and the fastest T20I 50 by a South African. His match winning ability and lethal innings across all formats rated him as number one batsman in several occasions."/>

          </LinearLayout>

        </android.support.v7.widget.CardView>

      </RelativeLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_below="@+id/cardProfile"
    android:padding="5dp"/>


  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_gravity="bottom|end"
    app:srcCompat="@drawable/ic_add_white_24dp"/>


</RelativeLayout>
