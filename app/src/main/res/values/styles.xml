<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowContentTransitions">true</item>

  </style>

  <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowContentTransitions">true</item>

  </style>

  <style name="ToolBarWithNavigationBack">
    <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
  </style>

  <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>

  <style name="CollapsingTextAppearance.Inverse">
    <item name="android:textSize">30sp</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="bold_white_text_style_size_14">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/size_14_sp</item>
  </style>

  <!-- custom  start -->

  <style name="wrap_content_height_width">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="roman_font.wrap_content" parent="wrap_content_height_width">
    <item name="android:fontFamily">@font/fontfamily</item>
  </style>

  <style name="roman_bold_font.wrap_content" parent="wrap_content_height_width">
    <item name="android:fontFamily">@font/fontfamilybold</item>
  </style>

  <style name="add_asset_label" parent="roman_font.wrap_content">
    <item name="android:textSize">@dimen/size_16</item>
    <item name="android:textColor">@color/color_524F53</item>
  </style>
  <!-- custom end-->


</resources>
