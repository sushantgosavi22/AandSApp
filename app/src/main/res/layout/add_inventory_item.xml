<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    android:id="@+id/dialog_title"
    android:textStyle="normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center"
    android:padding="5dp"
    android:background="@drawable/rounded_border_greenback"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:lineSpacingExtra="8sp"
    android:text="@string/inventory_item"
    android:textColor="@android:color/white"
    android:textSize="20sp"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.v7.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="5dp"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false">

        <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="5dp"
          android:orientation="vertical">

          <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.LinearLayoutCompat
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="4"
              android:orientation="vertical">
              <ImageView
                android:id="@+id/imgInventoryItemDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery"/>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="6"
              android:orientation="vertical">
              <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                  android:textStyle="normal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:layout_gravity="center"
                  android:text="@string/mandatory"
                  android:textColor="@android:color/holo_red_dark"
                  android:textSize="20sp"/>

                <EditText
                  android:id="@+id/edtItemName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:background="@android:drawable/editbox_background"
                  android:gravity="top"
                  android:hint="@string/item_name"
                  android:inputType="textCapSentences|textMultiLine"
                  android:maxLines="1"
                  android:textColorHint="@color/green_light"
                  android:textSize="20sp"/>


              </android.support.v7.widget.LinearLayoutCompat>

              <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                  android:textStyle="normal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:layout_gravity="center"
                  android:text="@string/mandatory"
                  android:textColor="@android:color/holo_red_dark"
                  android:textSize="20sp"/>

                <android.support.v7.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <EditText
                    android:id="@+id/edtItemQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:digits="1234567890"
                    android:gravity="top"
                    android:hint="@string/quantity"
                    android:maxLines="1"
                    android:textColorHint="@color/green_light"
                    android:textSize="20sp"/>

                  <EditText
                    android:id="@+id/edtItemUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@android:drawable/editbox_background"
                    android:inputType="textCapSentences|textMultiLine"
                    android:gravity="top"
                    android:hint="@string/unit"
                    android:maxLines="1"
                    android:textColorHint="@color/green_light"
                    android:textSize="20sp"/>

                </android.support.v7.widget.LinearLayoutCompat>


              </android.support.v7.widget.LinearLayoutCompat>


              <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                  android:textStyle="normal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:layout_gravity="center"
                  android:text="@string/mandatory"
                  android:textColor="@android:color/holo_red_dark"
                  android:textSize="20sp"/>

                <EditText
                  android:id="@+id/edtItemPurchasePrice"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:background="@android:drawable/editbox_background"
                  android:gravity="top"
                  android:hint="@string/purchase_price"
                  android:inputType="numberDecimal"
                  android:maxLines="1"
                  android:textColorHint="@color/green_light"
                  android:textSize="20sp"/>

              </android.support.v7.widget.LinearLayoutCompat>

              <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                  android:textStyle="normal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="2dp"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:layout_gravity="center"
                  android:text="@string/mandatory"
                  android:textColor="@android:color/holo_red_dark"
                  android:textSize="20sp"
                  android:visibility="invisible"/>

                <EditText
                  android:id="@+id/edtItemUnitPrice"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:background="@android:drawable/editbox_background"
                  android:editable="false"
                  android:enabled="false"
                  android:gravity="top"
                  android:hint="@string/unit_price"
                  android:inputType="numberDecimal"
                  android:maxLines="1"
                  android:textColorHint="@color/green_light"
                  android:textSize="20sp"/>
              </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>


          </android.support.v7.widget.LinearLayoutCompat>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
              android:id="@+id/edtSupposedSellingPrice"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@android:drawable/editbox_background"
              android:gravity="top"
              android:hint="@string/supposed_selling_price"
              android:inputType="numberDecimal"
              android:maxLines="1"
              android:textColorHint="@color/green_light"
              android:textSize="20sp"/>

            <EditText
              android:id="@+id/edtItemBrandName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@android:drawable/editbox_background"
              android:gravity="top"
              android:hint="@string/company_name_item"
              android:inputType="textCapSentences|textMultiLine"
              android:maxLines="1"
              android:textColorHint="@color/green_light"
              android:textSize="20sp"/>

            <EditText
              android:id="@+id/edtItemModelName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@android:drawable/editbox_background"
              android:gravity="top"
              android:hint="@string/model_name_item"
              android:inputType="textCapSentences|textMultiLine"
              android:maxLines="1"
              android:textColorHint="@color/green_light"
              android:textSize="20sp"/>

            <EditText
              android:id="@+id/edtItemColor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@android:drawable/editbox_background"
              android:gravity="top"
              android:hint="@string/item_color"
              android:inputType="textCapSentences|textMultiLine"
              android:maxLines="1"
              android:textColorHint="@color/green_light"
              android:textSize="20sp"/>

            <EditText
              android:id="@+id/edtItemSize"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@android:drawable/editbox_background"
              android:gravity="top"
              android:hint="@string/item_size"
              android:inputType="textCapSentences|textMultiLine"
              android:maxLines="1"
              android:textColorHint="@color/green_light"
              android:textSize="20sp"/>

            <EditText
              android:id="@+id/edtDescription"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@android:drawable/editbox_background"
              android:gravity="top"
              android:hint="Description"
              android:inputType="textCapSentences|textMultiLine"
              android:maxLines="3"
              android:minLines="3"
              android:textColorHint="@color/green_light"
              android:textSize="20sp"/>

          </LinearLayout>

        </android.support.v7.widget.LinearLayoutCompat>

      </android.support.v7.widget.CardView>

      <TextView
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/rounded_border_greenback"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="@string/inventory_item_purechase_shop_details"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>


      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:cardBackgroundColor="@android:color/white"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false">
        <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <EditText
            android:id="@+id/edtShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="top"
            android:hint="@string/purchase_shop_name"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="1"
            android:textColorHint="@color/green_light"
            android:textSize="20sp"/>
          <EditText
            android:id="@+id/edtShopMobileContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="top"
            android:hint="@string/purchase_shop_contact"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:textColorHint="@color/green_light"
            android:textSize="20sp"/>
          <EditText
            android:id="@+id/edtShopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="top"
            android:hint="@string/purchase_shop_address"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="1"
            android:minLines="3"
            android:textColorHint="@color/green_light"
            android:textSize="20sp"/>
        </android.support.v7.widget.LinearLayoutCompat>
      </android.support.v7.widget.CardView>

    </android.support.v7.widget.LinearLayoutCompat>

  </ScrollView>
</LinearLayout>