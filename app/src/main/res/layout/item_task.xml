<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="4dp">

  <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
          android:id="@+id/rrNames"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:orientation="vertical">
          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/tvModifiedParameterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            app:font_name="bold"
            tools:text="Sushant Gosavi"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/tvActinonMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/holo_blue_dark"
            android:autoLink="phone"
            app:font_name="bold"
            tools:text="9503166862"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/tvWorkPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:font_name="bold"
            tools:text="Pune"/>

        </LinearLayout>

        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_toRightOf="@+id/rrNames"
          android:gravity="right"
          android:orientation="horizontal">

          <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
              android:id="@+id/imgDeleteTask"
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:layout_margin="2dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:padding="2dp"
              android:src="@android:drawable/ic_menu_delete"/>

            <ImageView
              android:id="@+id/imgEditTask"
              android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:layout_margin="2dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:padding="2dp"
              android:src="@android:drawable/ic_menu_edit"/>
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/llButtons"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@+id/llButtons"
              android:gravity="right"
              android:orientation="horizontal">
              <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
                android:id="@+id/fromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:textColor="@android:color/holo_green_dark"
                app:font_name="bold"
                tools:text="12/08/2019"/>

              <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
                android:id="@+id/toDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:textColor="@android:color/holo_red_dark"
                app:font_name="bold"
                tools:text="11/03/2018"/>
            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:gravity="right"
              android:layout_height="wrap_content">
              <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
                android:id="@+id/tvHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:font_name="bold"
                tools:text="22 Hours"/>
              <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
                android:id="@+id/tvDiseal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:font_name="bold"
                tools:text="10 Liters"/>
            </LinearLayout>

            <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
              android:id="@+id/tvDescription"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              app:font_name="bold"
              android:maxLines="2"
              android:minLines="1"
              android:ellipsize="end"
              tools:text="Description"/>
          </LinearLayout>
        </RelativeLayout>
      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">
          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/DesidedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Decided Amount"
            android:textColor="@android:color/black"
            app:font_name="bold"
            tools:text="Desided Amount"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/DesidedAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            app:font_name="bold"
            tools:text="20,000"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">
          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/PayedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="Payed Amount"
            android:textColor="@android:color/black"
            app:font_name="bold"
            tools:text="Payed Amount"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/PayedAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            app:font_name="bold"
            tools:text="10,000"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">
          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/RemainingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="Remaining Amount"
            android:textColor="@android:color/black"
            app:font_name="bold"
            tools:text="Remaining Amount"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/RemainingAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="5dp"
            app:font_name="bold"
            tools:text="20,000"/>
        </LinearLayout>

      </LinearLayout>


    </LinearLayout>


  </android.support.v7.widget.CardView>
</RelativeLayout>