<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="4dp">

  <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
      android:id="@+id/mainRL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/imgInventoryItemHistory"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_margin="2dp"
          android:elevation="5dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:padding="2dp"
          android:src="@android:drawable/ic_menu_recent_history"/>

        <ImageView
          android:id="@+id/imgInventoryItemEdit"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_margin="2dp"
          android:elevation="5dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:padding="2dp"
          android:src="@android:drawable/ic_menu_edit"/>

        <ImageView
          android:id="@+id/imgInventoryItemDelete"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:elevation="5dp"
          android:layout_margin="2dp"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:padding="2dp"
          android:src="@android:drawable/ic_menu_delete"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/llButtons"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/imgInventoryItemLogo"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_margin="10dp"
          android:layout_gravity="center_vertical"
          android:src="@android:drawable/ic_menu_gallery"
          android:transitionName="source"/>


        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/inventoryItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            app:font_name="bold"
            tools:text="Pen"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/inventoryItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:font_name="bold"
            tools:text="30 unit"/>

          <com.aandssoftware.aandsinventory.utilities.CustomFontTextView
            android:id="@+id/inventoryItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:maxLines="1"
            app:font_name="bold"
            tools:text="Lexy Model A 50"/>

        </LinearLayout>
      </LinearLayout>
    </RelativeLayout>


  </android.support.v7.widget.CardView>
</RelativeLayout>